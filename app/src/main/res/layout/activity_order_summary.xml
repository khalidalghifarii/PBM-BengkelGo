<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        tools:context=".OrderSummaryActivity">

        <ImageButton
            android:id="@+id/btnBackOrderSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_revert"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_summary"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/logo"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:id="@+id/tvSummaryVehicleType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_vehicle_type"
            android:textSize="16sp"
            android:padding="12dp"
            android:background="@drawable/editbox_background_summary"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/tvSummaryServiceType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_service_type"
            android:textSize="16sp"
            android:padding="12dp"
            android:background="@drawable/editbox_background_summary"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/tvSummaryLocationArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_location_area"
            android:textSize="16sp"
            android:padding="12dp"
            android:background="@drawable/editbox_background_summary"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/tvSummaryServiceSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_service_schedule"
            android:textSize="16sp"
            android:padding="12dp"
            android:background="@drawable/editbox_background_summary"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/input_complete_address_hint"
            android:layout_marginBottom="12dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtCompleteAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:gravity="top"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tvSummaryPaymentMethod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_payment_method"
            android:textSize="16sp"
            android:padding="12dp"
            android:background="@drawable/editbox_background_summary"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btnOrderNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/order_now"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:paddingVertical="12dp"/>
    </LinearLayout>
</ScrollView>